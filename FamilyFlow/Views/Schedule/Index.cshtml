@model IEnumerable<ScheduleItemViewModel>

@{
    ViewData["Title"] = "Family Schedule";
}

<h2 class="mb-4">Family Schedule</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No scheduled events or tasks found.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Family Member</th>
                <th>Title</th>
                <th>Type</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Accompanying Adult</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FamilyMemberName</td>
                    <td>@item.Title</td>
                    <td>
                        <span class="badge @(item.Type == "Event" ? "bg-primary" : "bg-success")">
                            @item.Type
                        </span>
                    </td>
                    <td>
                        @(item.StartTime?.ToString("dd.MM.yyyy HH:mm") ?? "-")
                    </td>
                    <td>
                        @item.EndTime.ToString("dd.MM.yyyy HH:mm")
                    </td>
                    <td>
                        @(string.IsNullOrWhiteSpace(item.AccompanyingAdultName)
                                        ? "-"
                                        : item.AccompanyingAdultName)
            </td>
        </tr>
                }
        </tbody>
    </table>
}
