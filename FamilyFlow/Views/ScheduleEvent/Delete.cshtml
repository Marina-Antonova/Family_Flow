@model DeleteEventViewModel

@{
    ViewData["Title"] = "Delete Schedule Event";
}

<h1 class="mb-2">Delete Schedule Event</h1>
<p class="text-muted mb-4">
    Please confirm that you want to delete this schedule event.
</p>

<div class="row justify-content">
    <div class="col-12 col-lg-9 col-xl-8">
        <div class="card shadow-sm border">
            <div class="card-header bg-white border-bottom">
                <strong>Confirmation</strong>
            </div>

            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning:</strong>
                    This action cannot be undone.
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Start date</dt>
                    <dd class="col-sm-9">
                        @Model.StartTime
                    </dd>

                    <dt class="col-sm-3">End date</dt>
                    <dd class="col-sm-9">
                        @Model.EndTime
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-controller="FamilyMembers"
                           asp-action="Details"
                           asp-route-id="@Model.FamilyMemberId"
                           class="btn btn-secondary">
                            Cancel
                        </a>

                        <button type="submit" class="btn btn-danger">
                            Delete event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
