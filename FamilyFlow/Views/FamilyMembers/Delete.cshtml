@model DeleteFamilyMemberViewModel

@{
    ViewData["Title"] = "Delete Family Member";
}

<h1 class="mb-2">Delete Family Member</h1>
<p class="text-muted mb-4">
    Please confirm that you want to delete this family member.
</p>

<div class="row justify-content">
    <div class="col-12 col-lg-9 col-xl-8">
        <div class="card shadow-sm border">
            <div class="card-header bg-white border-bottom">
                <strong>Confirmation</strong>
            </div>

            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>Warning:</strong>
                    This action cannot be undone.
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Role</dt>
                    <dd class="col-sm-9">@Model.Role</dd>

                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-controller="FamilyMembers"
                           asp-action="All"
                           class="btn btn-light">
                            Cancel
                        </a>

                        <button type="submit" class="btn btn-danger">
                            Delete member
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
