@model DetailsFamilyMemberViewModel

@{
    ViewData["Title"] = "Family Member Details";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">Family Member Details</h5>
            </div>

            <div class="card-body">
                <h4 class="mb-3">@Model.Name</h4>

                <div class="mb-2 d-flex justify-content-between">
                    <span class="text-muted">@Model.Role</span>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">House Tasks</span>
                        <span class="fw-semibold">@Model.Tasks.Count</span>
                    </div>

                    @if (Model.Tasks != null && Model.Tasks.Any())
                    {
                        <div class="mt-2">
                            @foreach (var task in Model.Tasks)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <div class="fw-medium">@task.Title</div>
                                        <small class="text-muted">
                                            Due: @task.DueDate.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                        &nbsp;&nbsp;&nbsp;
                                    <div class="d-flex gap-1">
                                        <a asp-controller="HouseTasks"
                                           asp-action="Edit"
                                           asp-route-id="@task.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>
                                          <a asp-controller="HouseTasks"
                                               asp-action="Delete"
                                               asp-route-id="@task.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                Delete
                                            </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic mt-2">
                            No house tasks assigned.
                        </div>
                    }

                    <a asp-controller="HouseTasks"
                       asp-action="Create"
                       asp-route-id="@Model.Id"
                       class="btn btn-sm btn-outline-success mt-2">
                        Add Task
                    </a>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Schedule Events</span>
                        <span class="fw-semibold">@Model.Events.Count</span>
                    </div>

                    @if (Model.Events != null && Model.Events.Any())
                    {
                        <div class="mt-2">
                            @foreach (var ev in Model.Events)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <div class="fw-medium">@ev.Title</div>
                                        <small class="text-muted">
                                            @ev.StartTime.ToString("dd.MM.yyyy")
                                            –
                                            @ev.EndTime.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                        &nbsp;&nbsp;&nbsp;
                                    <div class="d-flex gap-1">
                                        <a asp-controller="ScheduleEvent"
                                           asp-action="Edit"
                                           asp-route-id="@ev.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>

                                        <a asp-controller="ScheduleEvent"
                                           asp-action="Delete"
                                           asp-route-id="@ev.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic mt-2">
                            No schedule events assigned.
                        </div>
                    }

                    <a asp-controller="ScheduleEvent"
                       asp-action="Create"
                       asp-route-id="@Model.Id"
                       class="btn btn-sm btn-outline-success mt-2">
                        Add Event
                    </a>
                </div>
            </div>

            <div class="card-footer bg-white border-top text-end">
                <a asp-controller="FamilyMembers"
                   asp-action="All"
                   class="btn btn-outline-secondary">
                    ← Back to list
                </a>
            </div>
        </div>
    </div>
</div>
