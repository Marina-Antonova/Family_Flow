@model IEnumerable<AllFamilyMembersViewModel>

@{
    ViewData["Title"] = "Family Members";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-0">Family Members</h2>
        <small class="text-muted">Overview of all family members</small>
    </div>

    <a class="btn btn-primary"
       asp-controller="FamilyMembers"
       asp-action="Create">
        + Add Member
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border text-center">
        No family members found.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Name</th>
                        <th>Role</th>
                        <th>Age</th>
                        <th class="text-center">Tasks</th>
                        <th class="text-center">Events</th>
                        <th class="text-end pe-3"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fm in Model)
                    {
                        <tr>
                            <td class="ps-3 fw-semibold">
                                @fm.Name
                            </td>

                            <td>
                                <span class="badge bg-secondary">
                                    @fm.Role
                                </span>
                            </td>

                            <td>
                                @(fm.Age.HasValue? fm.Age.ToString() : "—")
                            </td>

                            <td class="text-center">
                                <span class="fw-semibold">
                                    @fm.HouseTasksCount
                                </span>
                            </td>

                            <td class="text-center">
                                <span class="fw-semibold">
                                    @fm.ScheduleEventsCount
                                </span>
                            </td>

                            <td class="text-end pe-3">
                                <div class="d-inline-flex gap-1">
                                    <a asp-controller="FamilyMembers"
                                       asp-action="Details"
                                       asp-route-id="@fm.Id"
                                       class="btn btn-sm btn-outline-info">
                                        Details
                                    </a>

                                    <a asp-controller="FamilyMembers"
                                       asp-action="Edit"
                                       asp-route-id="@fm.Id"
                                       class="btn btn-sm btn-outline-info">
                                        Edit
                                    </a>

                                    <a asp-controller="FamilyMembers"
                                       asp-action="Delete"
                                       asp-route-id="@fm.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
