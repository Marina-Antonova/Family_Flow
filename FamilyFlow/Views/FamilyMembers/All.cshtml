@model IEnumerable<AllFamilyMembersViewModel>

@{
    ViewData["Title"] = "Family Members";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-0">Family Members</h2>
        <small class="text-muted">Overview of all family members</small>
    </div>

    <a class="btn btn-primary"
       asp-controller="FamilyMembers"
       asp-action="Create">
        + Add Member
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border text-center">
        No family members found.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var fm in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm border-0 text-center">

                    <div class="pt-4">
                        <img src="@fm.RoleImagePath"
                             alt="@fm.Role"
                             class="rounded-circle shadow-sm"
                             style="width:120px; height:120px; object-fit:cover;">
                    </div>

                    <div class="card-body">

                        <h5 class="card-title fw-bold mb-1">
                            @fm.Name
                        </h5>

                        <span class="badge bg-secondary mb-3">
                            @fm.Role
                        </span>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li><strong>Age:</strong> @(fm.Age.ToString() ?? "—")</li>
                            <li><strong>Tasks:</strong> @fm.HouseTasksCount</li>
                            <li><strong>Events:</strong> @fm.ScheduleEventsCount</li>
                        </ul>
                    </div>

                    <div class="card-footer bg-transparent border-0 pb-3">
                        <div class="d-flex justify-content-center gap-2">

                            <a asp-controller="FamilyMembers"
                               asp-action="Details"
                               asp-route-id="@fm.Id"
                               class="btn btn-sm btn-outline-primary">
                                Details
                            </a>

                            <a asp-controller="FamilyMembers"
                               asp-action="Edit"
                               asp-route-id="@fm.Id"
                               class="btn btn-sm btn-outline-secondary">
                                Edit
                            </a>

                            <a asp-controller="FamilyMembers"
                               asp-action="Delete"
                               asp-route-id="@fm.Id"
                               class="btn btn-sm btn-outline-danger">
                                Delete
                            </a>

                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}
